<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="code.Controller">
   <left>
      <VBox alignment="CENTER" prefHeight="478.0" prefWidth="218.0" spacing="90.0" style="-fx-background-color: #2D3142;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@loginImage.png" />
               </image>
            </ImageView>
            <VBox>
               <children>
                  <Button fx:id="serverStatusBtn" mnemonicParsing="false" onAction="#serverStatus" prefHeight="62.0" prefWidth="218.0" style="-fx-background-color: #2D3142;" text="Server Status" textFill="#08bdff" />
                  <Button fx:id="createAccountBtn" mnemonicParsing="false" onAction="#createAccount" prefHeight="62.0" prefWidth="218.0" style="-fx-background-color: #2D3142;" text="Create Account" textFill="#08bdff" />
                  <Button fx:id="deleteAccountBtn" mnemonicParsing="false" onAction="#deleteAccount" prefHeight="62.0" prefWidth="218.0" style="-fx-background-color: #2D3142;" text="Delete Account" textFill="#08bdff" />
               </children>
            </VBox>
         </children>
      </VBox>
   </left>
   <top>
      <HBox fx:id="paneControllers" alignment="CENTER_RIGHT" prefHeight="41.0" prefWidth="1000.0" spacing="5.0" style="-fx-background-color: #2D3142;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="minimizeBtn" mnemonicParsing="false" onAction="#minimize" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #1B1D29;" text="__" textFill="#08bdff">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#close" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #1B1D29;" text="X" textFill="#08bdff">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
